extends layout

block content
	h1 Members Area
	p Welcome to the Members Area
	table.table.table-bordered.table-striped
		if users
			tr
				td 
					strong SL
				td 
					strong NAME
				td 
					strong USERNAME
				td 
					strong EMAIL
				td 
					strong ACTION
			each user, i in users
				tr
					td #{(i+1)}
					td #{user.name}
					td #{user.username}
					td #{user.email}
					td 
						a.btn.btn-success(href="/users/edit/#{user.id}" title="Click to Edit") Edit 
							i.glyphicon.glyphicon-edit
						&nbsp;
						a.btn.btn-danger(href="/users/delete/#{user.id}" title="Click to Delete") Delete 
							i.glyphicon.glyphicon-remove